generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String       @id @default(cuid())
  name       String   @unique
  email     String       @unique
  country   String?
  createdAt DateTime     @default(now())
  txns      Transaction[]
}

model Transaction {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  amount      Float
  currency    String
  merchant    String
  category    String
  lat         Float?
  lon         Float?
  deviceId    String?
  ip          String?
  createdAt   DateTime  @default(now())
  alert       Alert?
  isSuspicious Boolean  @default(false)
}

model Alert {
  id            String      @id @default(cuid())
  transactionId String      @unique
  transaction   Transaction @relation(fields: [transactionId], references: [id])
  score         Float
  reasons       String
  status        String      @default("OPEN")
  createdAt     DateTime    @default(now())
}

model Rule {
  id         String   @id @default(cuid())
  name       String   @unique
  definition String   // JSON string: { field, op, value, weight? }
  enabled    Boolean  @default(true)
  createdAt  DateTime @default(now())
}
